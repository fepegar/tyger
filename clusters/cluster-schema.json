{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ClusterDefinition",
  "description": "A definition of a reconstruction/processing cluster",
  "type": "object",
  "properties": {
    "clusterName": {
      "description": "Name of the cluster",
      "type": "string"
    },
    "location": {
      "type": "string",
      "description": "Azure region for the cluster",
      "default": "westus2"
    },
    "subscription": {
      "type": "string",
      "description": "Azure subscription"
    },
    "systemNodeSize": {
      "description": "Azure VM size for the system nodes",
      "type": "string",
      "default": "Standard_DS2_v2"
    },
    "userNodePools": {
      "description": "User node pools",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of node pool",
            "type": "string"
          },
          "vmSize": {
            "type": "string"
          },
          "minCount": {
            "description": "Minimum number of nodes in pool",
            "type": "integer",
            "default": 0
          },
          "maxCount": {
            "description": "Maximum number of nodes in pool",
            "type": "integer",
            "default": 10
          }
        },
        "required": ["name", "vmSize", "minCount", "maxCount" ]
      },
      "minItems": 1,
      "uniqueItems": false
    },
    "storageAccounts": {
      "type": "object",
      "properties": {
        "storageServer": {
          "type": "string",
          "pattern": "^[a-z0-9]{3,24}$"
        },
        "buffers": {
          "type": "string",
          "pattern": "^[a-z0-9]{3,24}$"
        }
      },
      "required": ["storageServer", "buffers"]
    },
    "containerRegistries": {
      "type": "array",
      "description": "List of container registries to attach to cluster",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "uniqueItems": true,
      "default": []
    },
    "isEphemeral": {
      "type": "boolean",
      "description": "If set to true, the environment is ephemeral and can be destroyed during testing, etc.",
      "default": false
    }
  },
  "required": [
    "clusterName",
    "location",
    "subscription",
    "systemNodeSize",
    "userNodePools",
    "isEphemeral",
    "storageAccounts"
  ]
}
