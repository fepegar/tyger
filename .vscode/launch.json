  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/server/tyger.server/bin/Debug/net6.0/tyger.server",
      "args": [],
      "cwd": "${workspaceFolder}/server/tyger.server",
      "stopAtEntry": false,
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "CLI",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cli/cmd/tyger",
      "cwd": "${workspaceFolder}",
      "args": ["login", "status"]
    }
  ]
}
